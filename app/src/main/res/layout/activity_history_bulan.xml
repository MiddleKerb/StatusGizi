<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context=".history.HistoryBulan">

    <TextView
        android:id="@+id/empty_history_bulan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Data Kosong! Hitung status gizi terlebih dahulu pada menu Hitung Status Gizi"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonHistoryBulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_history_bulan"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorAccent"
        android:text="Hitung status gizi"
        android:textColor="@color/putih"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/JudulHistoryBulan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="Lihat seluruh data riwayat pengukuran"
        android:textColor="@android:color/primary_text_light"
        android:textSize="27sp" />

    <Button
        android:id="@+id/ButtonAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/JudulHistoryBulan"
        android:layout_marginTop="@dimen/fab_margin"
        android:backgroundTint="@color/colorPrimary"
        android:text="Lihat Semua Data"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SubJudulHistoryBulan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonAll"
        android:layout_marginTop="@dimen/fab_margin"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="Lihat data riwayat pengukuran berdasarkan umur anak anda (Bulan)"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/LayoutHistoryBulanStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SubJudulHistoryBulan"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/TextHistoryBulanStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dari umur (Bulan)"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/LayoutHistoryBulanEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutHistoryBulanStart"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/TextHistoryBulanEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hingga umur (Bulan)"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:id="@+id/ProgressHistoryBulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/ButtonBulan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutHistoryBulanEnd"
        android:layout_marginTop="@dimen/fab_margin"
        android:backgroundTint="@color/colorAccent"
        android:text="LIHAT DATA (UMUR)"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

</RelativeLayout>