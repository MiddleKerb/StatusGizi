<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".makan.TambahBahan">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FieldNamaBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditNamaBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Bahan"
            android:inputType="textCapWords" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FieldKaloriBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditKaloriBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kalori"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FieldKarboBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditKarboBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Karbohidrat"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FieldLemakBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditLemakBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lemak"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FieldProteinBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditProteinBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Protein"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/ButtonAddBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Tambah bahan"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />
</LinearLayout>