<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".graph.GraphChoose">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:fontFamily="@font/fredoka_regular"
        android:gravity="center"
        android:text="Pilih kategori dan ambang batas status gizi anak berdasarkan indeks"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/primary_text_light" />

    <Button
        android:id="@+id/GraphToBBU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:backgroundTint="@color/hijau"
        android:text="Berat Badan menurut Umur"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/GraphToTBU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:backgroundTint="@color/biru"
        android:text="Tinggi Badan menurut Umur"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/GraphToBBTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:backgroundTint="@color/merah"
        android:text="Berat Badan menurut Tinggi Badan"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/GraphToIMTU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:backgroundTint="@color/kuning"
        android:text="Indeks Masa Tubuh Menurut Umur"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textStyle="bold" />

</LinearLayout>